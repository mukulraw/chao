<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="20dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_gravity="center"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/crossimgae"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:background="@drawable/ic_error"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tytle"
                        android:textSize="12dp"
                        android:padding="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/lato_bold"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:text="Add money to your wallet"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:textColor="@color/Black"
                        android:layout_height="wrap_content" />


                    <LinearLayout
                        android:id="@+id/name_lner"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/edit_background"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/amount"
                            android:textSize="22dp"
                            android:padding="10dp"
                            android:fontFamily="@font/lato_bold"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:hint="Enter Amount"
                            android:inputType="number"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:textColor="@color/Black"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:weightSum="1"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout

                        android:id="@+id/Comfirm"
                        android:layout_width="0dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight=".5"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/confirm"
                            android:textSize="18dp"
                            android:fontFamily="@font/lato_bold"
                            android:layout_width="match_parent"
                            android:text="Trial Comfirm"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:textAllCaps="false"
                            android:textColor="@color/Black"
                            android:layout_height="wrap_content" />

                    </LinearLayout>




                    <LinearLayout
                        android:id="@+id/Not"
                        android:layout_width="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight=".5"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/Notbtn"
                            android:textSize="18dp"
                            android:layout_width="match_parent"
                            android:text="Not Confirm"
                            android:fontFamily="@font/lato_bold"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:textAllCaps="false"
                            android:textColor="@color/Black"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:backgroundTint="@color/Black"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/rippleeffect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/makepayment"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:text="Make Payment"
                        android:fontFamily="@font/lato_bold"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:textAllCaps="false"
                        android:textColor="@color/White"
                        android:layout_height="wrap_content" />

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>